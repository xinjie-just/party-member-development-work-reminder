@import "../../assets/styles/common-background.wxss";

.header {
  width: 750rpx;
  height: 484rpx;
  background: linear-gradient(225deg, #EC1831 0%, #910F17 100%);
  border-bottom-right-radius: 200rpx 100rpx;
  border-bottom-left-radius: 200rpx 100rpx;
  color: #fff;
  padding: 70rpx 58rpx 220rpx;
  box-sizing: border-box;
}
.welcome {
  display: block;
  font-size: 40rpx;
  font-weight: 400;
  line-height: 40rpx;
  margin-bottom: 30rpx;
}
.tips {
  font-size: 46rpx;
  font-weight: 400;
  line-height: 46rpx;
}
.todo-container {
  width: 694rpx;
  background: #FFFFFF;
  box-shadow: 0px 2rpx 30rpx 0px rgba(33, 60, 102, 0.1);
  border-radius: 30rpx;
  margin: -224rpx auto 0;
  box-sizing: border-box;
  padding: 20rpx 30rpx 60rpx;
}

.todo-item {
  display: block;
  height: 112rpx;
  line-height: 112rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #333333;
}
.todo-item:not(:last-of-type) {
  border-bottom: 1rpx solid #e5e5e5;
}
.submit-btn {
  margin-top: 20rpx;
  width: 500rpx;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  border-radius: 49rpx;
  background-color: #fff;
  border: 1px solid #E5E5E5;
  font-size: 36rpx;
  font-weight: 400;
  color: #333333;
  padding: 0;
  box-sizing: border-box;
}
.no-data-img {
  display: block;
  width: 240rpx;
  height: 240rpx;
  margin: 40rpx auto 0;
}