<!--pages/bind-phone/bind-phone.wxml-->
<view class="page" data-weui-theme="light">
  <image src="../../assets/images/logo@2x.png" alt="logo" class="logo"></image>
  <form bindsubmit="submit" class="bind-phone-form">
    <view class="form-control-item">
      <label for="name" class="form-control-label">姓名</label>
      <input id="name" class="form-control-input" placeholder="请输入姓名"/>
    </view>
    <view class="form-control-item">
      <label for="phone" class="form-control-label">手机号</label>
      <input id="phone" class="form-control-input" placeholder="请输入手机号"/>
    </view>
    <button form-type="submit" class="submit-btn">确定</button>
  </form>
</view>
