<!--pages/wechat-login.wxml-->
<view class="container">
  <block wx:if="{{!hasUserInfo && canIUse}}">
    <image src="/assets/images/logo@2x.png" class="logo"></image>
    <text class="login-text">登录</text>
    <text class="auth-describe">请允许微信授权以获取你的身份信息</text>
    <button class="submit-btn" wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 同意 </button>
  </block>
  <block wx:else>
    <image bindtap="bindViewTap" class="userinfo-avatar logo" src="{{userInfo.avatarUrl}}" mode="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </block>
</view>
