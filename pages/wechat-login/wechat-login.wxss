/* pages/wechat-login.wxss */
.container {
  padding: 100rpx 50rpx;
}
.logo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-bottom: 80rpx;
}

.login-text {
  display: block;
  text-align: center;
  margin-bottom: 30rpx;
  font-size: 44rpx;
  font-weight: 500;
  color: #333333;
  line-height: 41px;
}

.auth-describe {
  display: block;
  font-size: 28rpx;
  color: #666666;
  line-height: 28rpx;
  text-align: center;
  margin-bottom: 70rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-nickname {
  color: #aaa;
}

.submit-container {
  width: 400rpx;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  background-color: #E41E35;
  border-radius: 49rpx;
  font-size: 36rpx;
  color: #fff;
}
.submit-container button {
  color: #ffffff;
  line-height: 98rpx;
  padding: 0;
}

.phone-password-login-btn {
  display: block;
  margin: 50rpx auto 0;
  width: 500rpx;
  height: 98rpx;
  border-radius: 49rpx;
  font-size: 36rpx;
  line-height: 98rpx;
  text-align: center;
  background-color: #fff;
  border: 1px solid #E5E5E5;
  color: #333333;
}

.usermotto {
  margin-top: 200px;
}