/* pages/wechat-login.wxss */
.container {
  padding: 100rpx 50rpx;
}
.logo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-bottom: 80rpx;
}

.login-text {
  display: block;
  text-align: center;
  margin-bottom: 30rpx;
  font-size: 44rpx;
  font-weight: 500;
  color: #333333;
  line-height: 41px;
}

.auth-describe {
  display: block;
  font-size: 28rpx;
  color: #666666;
  line-height: 28rpx;
  text-align: center;
  margin-bottom: 70rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-nickname {
  color: #aaa;
}

.submit-btn {
  width: 400rpx;
  padding-top: 24rpx;
  padding-bottom: 24rpx;
  line-height: 50rpx;
  text-align: center;
  background: #E41E35;
  border-radius: 49rpx;
  font-size: 36rpx;
  color: #fff;
}

.usermotto {
  margin-top: 200px;
}