.container {
  padding: 100rpx 50rpx;
}
.logo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-bottom: 100rpx;
}

.login-text {
  display: block;
  text-align: center;
  margin-bottom: 30rpx;
  font-size: 44rpx;
  font-weight: 500;
  color: #333333;
  line-height: 41px;
}

.auth-describe {
  display: block;
  font-size: 34rpx;
  color: #666666;
  line-height: 60rpx;
  text-align: center;
  margin-bottom: 110rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-nickname {
  color: #aaa;
}

.submit-container {
  width: 420rpx;
  height: 108rpx;
  line-height: 108rpx;
  text-align: center;
  background-color: #e41e35;
  border-radius: 108rpx !important;
  font-size: 36rpx;
  color: #fff;
}
#getUserInfoBtn {
  width: 420rpx !important;
  height: 108rpx !important;
  line-height: 108rpx !important;
  color: #ffffff !important;
  padding: 0 !important;
  background-color: #e41e35 !important;
  border-radius: 108rpx !important;
  font-size: 36rpx !important;
}

.phone-password-login-btn {
  display: block;
  margin: 70rpx auto 0;
  width: 420rpx;
  height: 108rpx;
  border-radius: 108rpx;
  font-size: 36rpx;
  line-height: 104rpx;
  text-align: center;
  background-color: #fff;
  border: 2rpx solid #e5e5e5;
  color: #333333;
  box-sizing: border-box;
}

.usermotto {
  margin-top: 200px;
}
