<view class="page">
  <image src="/assets/images/logo@2x.png" alt="logo" class="logo"></image>
  <form class="validation-password-form">
    <view class="form-control">
      <view class="form-control-item">
        <label for="phone" class="form-control-label">手机号</label>
        <input type="text" id="phone" class="form-control-input {{phone ? disabled : ''}}" placeholder="请输入手机号" value="{{phone}}" disabled="{{phone ? true : false}}" />
      </view>
      <view class="form-control-item">
        <label for="password" class="form-control-label">密码</label>
        <input type="password" id="password" data-name="password" class="form-control-input" placeholder="请输入密码验证" value="{{password}}" bindinput="onInput"/>
      </view>
    </view>
    <view class="submit-btn {{valid ? '' : 'disabled'}}" catchtap="validationPassword">确定</view>
  </form>
</view>